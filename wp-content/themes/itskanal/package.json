{
  "name": "itskanal-theme",
  "version": "1.0.0",
  "description": "Custom WordPress theme for iTS KANAL with Tailwind CSS",
  "scripts": {
    "dev": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/style.css --watch",
    "dev:sync": "browser-sync start --proxy 'localhost:8000' --files '**/*.php, assets/css/style.css, assets/js/*.js' --no-notify --no-open",
    "watch": "npm-run-all --parallel dev dev:sync",
    "build": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/style.css --minify"
  },
  "keywords": ["wordpress", "theme", "tailwindcss"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "browser-sync": "^3.0.3",
    "npm-run-all": "^4.1.5"
  }
}
